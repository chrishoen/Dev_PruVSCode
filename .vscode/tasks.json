{
  "version": "2.0.0",
  "tasks": [
   {
      "label": "myecho",
      "type": "shell",
      "group": "build",
      "command": ".\\myecho.cmd",
      "args": [
         ""
      ],
      "presentation": {
         "echo": true,
         "reveal": "always",
         "focus": false,
         "panel": "shared",
         "showReuseMessage": false,
         "clear": false
      }
   },
   {
      "label": "myclean",
      "type": "shell",
      "group": "build",
      "command": "C:/ti/ccs/ccs/utils/bin/gmake.exe -k clean",
      "presentation": {
         "echo": true,
         "reveal": "always",
         "focus": false,
         "panel": "shared",
         "showReuseMessage": false,
         "clear": false
      },
      "problemMatcher": []
   },
   {
      "label": "mybuild",
      "type": "shell",
      "group": "build",
      "command": "C:/ti/ccs/ccs/utils/bin/gmake.exe -k all",
      "presentation": {
         "echo": true,
         "reveal": "always",
         "focus": false,
         "panel": "shared",
         "showReuseMessage": false,
         "clear": false
      },
      "problemMatcher": {
         "owner": "cpp",
         "fileLocation": [ "absolute" ],
         "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
         }
      }
   }
]
}

